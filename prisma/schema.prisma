generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  VENDOR
  ADMIN
}

enum VendorStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum ProductStatus {
  DRAFT
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum RentalStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  ACTIVE
  RETURN_REQUESTED
  RETURNED
  LATE
  CANCELLED
  DISPUTED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum PaymentMethod {
  CARD
  WALLET
  BANK_TRANSFER
  CASH_ON_DELIVERY
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
  SPAM
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  vendor        Vendor?
  customer      Customer?
  addresses     Address[]
  reviews       Review[]
  cartItems     CartItem[]
  wallet        Wallet?
  notifications Notification[]

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// CART
// ============================================

model CartItem {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  variantId   String?
  quantity    Int      @default(1)
  rentalStart DateTime?
  rentalEnd   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, variantId])
  @@index([userId])
  @@index([productId])
}

// ============================================
// CUSTOMER PROFILE
// ============================================

model Customer {
  id                String   @id @default(cuid())
  userId            String   @unique
  phone             String?
  dateOfBirth       DateTime?
  sizePreferences   Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  rentals        Rental[]
  rentalReturns  RentalReturn[]
  paymentMethods PaymentMethodModel[]
  reviews        Review[]

  @@index([userId])
}

model Address {
  id         String   @id @default(cuid())
  userId     String
  type       String   @default("shipping")
  firstName  String
  lastName   String
  company    String?
  address1   String
  address2   String?
  city       String
  state      String
  postalCode String
  country    String   @default("India")
  phone      String?
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Wallet {
  id              String   @id @default(cuid())
  userId          String   @unique
  balance         Decimal  @default(0) @db.Decimal(10, 2)
  pendingBalance  Decimal  @default(0) @db.Decimal(10, 2)
  currency        String   @default("INR")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user         User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions WalletTransaction[]

  @@index([userId])
}

model WalletTransaction {
  id          String   @id @default(cuid())
  walletId    String
  type        String
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  reference   String?
  status      String   @default("COMPLETED")
  createdAt   DateTime @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([walletId])
}

// ============================================
// VENDOR
// ============================================

model Vendor {
  id              String        @id @default(cuid())
  userId          String        @unique
  businessName    String
  businessSlug    String        @unique
  description     String?       @db.Text
  logo            String?       @db.Text
  banner          String?
  phone           String?
  status          VendorStatus @default(PENDING)
  commissionRate  Decimal       @default(10) @db.Decimal(5, 2)
  rating          Decimal       @default(0) @db.Decimal(3, 2)
  totalSales      Int           @default(0)
  isVerified      Boolean       @default(false)
  verifiedAt      DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  bankName        String?
  bankAccount     String?
  bankRouting     String?
  paypalEmail     String?

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  products        Product[]
  rentals         Rental[]      @relation("VendorRental")
  payouts         Payout[]
  vendorDocuments VendorDocument[]

  @@index([userId])
  @@index([businessSlug])
  @@index([status])
}

model VendorDocument {
  id          String   @id @default(cuid())
  vendorId    String
  type        String
  fileUrl     String
  status      String   @default("PENDING")
  verifiedAt  DateTime?
  createdAt   DateTime @default(now())

  vendor Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([vendorId])
}

// ============================================
// PRODUCTS & INVENTORY
// ============================================

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?   @db.Text
  parentId    String?
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children   Category[] @relation("CategoryHierarchy")
  products    Product[]
  attributes  CategoryAttribute[]

  @@index([slug])
  @@index([parentId])
}

model CategoryAttribute {
  id         String   @id @default(cuid())
  categoryId String
  name       String
  type       String
  options    Json?
  isRequired Boolean  @default(false)
  sortOrder  Int      @default(0)

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
}

model Product {
  id              String        @id @default(cuid())
  vendorId        String
  categoryId      String
  name            String
  slug            String        @unique
  description     String?       @db.Text
  images          Json
  videoUrl        String?
  status          ProductStatus @default(DRAFT)
  isFeatured      Boolean       @default(false)
  
  dailyPrice      Decimal       @db.Decimal(10, 2)
  weeklyPrice     Decimal?      @db.Decimal(10, 2)
  depositAmount   Decimal       @default(50) @db.Decimal(10, 2)
  
  brandId        String?
  gender          String       @default("NONE")
  condition       String       @default("new")
  careInstructions String?    @db.Text
  
  viewCount       Int          @default(0)
  rentalCount     Int          @default(0)
  rating          Decimal      @default(0) @db.Decimal(3, 2)
  reviewCount     Int          @default(0)
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  vendor          Vendor       @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  category        Category     @relation(fields: [categoryId], references: [id])
  brand           Brand?       @relation(fields: [brandId], references: [id])
  variants        ProductVariant[]
  reviews         Review[]
  rentals         RentalItem[]
  blockDates      BlockedDate[]
  attributes      ProductAttribute[]
  cartItems       CartItem[]

  @@index([vendorId])
  @@index([categoryId])
  @@index([slug])
  @@index([status])
}

model ProductVariant {
  id           String   @id @default(cuid())
  productId    String
  size         String
  color        String?
  sku          String?  @unique
  inventory    Int      @default(1)
  isAvailable  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  product      Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  rentalItems  RentalItem[]

  @@index([productId])
  @@index([sku])
}

model ProductAttribute {
  id         String   @id @default(cuid())
  productId  String
  name       String
  value      String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model BlockedDate {
  id        String   @id @default(cuid())
  productId String
  startDate DateTime
  endDate   DateTime
  reason    String?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([startDate, endDate])
}

// ============================================
// RENTALS & ORDERS
// ============================================

model Rental {
  id                String        @id @default(cuid())
  orderNumber       String        @unique
  customerId        String
  vendorId          String
  status            RentalStatus  @default(PENDING)
  
  rentalStartDate   DateTime
  rentalEndDate     DateTime
  actualReturnDate DateTime?
  
  subtotal          Decimal       @db.Decimal(10, 2)
  depositAmount     Decimal       @db.Decimal(10, 2)
  deliveryFee       Decimal       @default(0) @db.Decimal(10, 2)
  platformFee       Decimal       @default(0) @db.Decimal(10, 2)
  taxAmount         Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount       Decimal       @db.Decimal(10, 2)
  depositRefunded   Decimal       @default(0) @db.Decimal(10, 2)
  
  shippingAddress   Json
  deliverySlot     String?
  trackingNumber   String?
  carrier          String?
  
  customerNote      String?       @db.Text
  vendorNote        String?       @db.Text
  adminNote         String?       @db.Text
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  customer    Customer       @relation(fields: [customerId], references: [id])
  vendor      Vendor         @relation("VendorRental", fields: [vendorId], references: [id])
  items       RentalItem[]
  payment     Payment?
  return      RentalReturn?
  disputes    Dispute[]

  @@index([customerId])
  @@index([vendorId])
  @@index([orderNumber])
  @@index([status])
  @@index([rentalStartDate, rentalEndDate])
}

model RentalItem {
  id              String   @id @default(cuid())
  rentalId        String
  productId       String
  variantId       String?
  
  productName     String
  productImage    String   @db.Text
  variantSize     String?
  variantColor    String?
  
  dailyPrice      Decimal  @db.Decimal(10, 2)
  weeklyPrice     Decimal? @db.Decimal(10, 2)
  rentalDays      Int
  subtotal        Decimal  @db.Decimal(10, 2)
  
  status          String   @default("PENDING")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  rental   Rental         @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  product  Product        @relation(fields: [productId], references: [id])
  variant  ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([rentalId])
  @@index([productId])
}

model RentalReturn {
  id              String   @id @default(cuid())
  rentalId        String   @unique
  customerId      String
  requestedAt     DateTime @default(now())
  returnDeadline  DateTime
  
  returnMethod    String
  pickupAddress  String?
  scheduledDate   DateTime?
  actualReturnDate DateTime?
  
  condition       String?
  conditionNotes  String?  @db.Text
  images          Json?
  
  depositStatus   String   @default("PENDING")
  depositAmount   Decimal  @db.Decimal(10, 2)
  
  resolvedAt      DateTime?
  resolution      String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  rental   Rental    @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  customer Customer  @relation(fields: [customerId], references: [id])

  @@index([rentalId])
  @@index([customerId])
}

// ============================================
// PAYMENTS
// ============================================

model Payment {
  id              String        @id @default(cuid())
  rentalId        String        @unique
  customerId      String
  
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("INR")
  method          PaymentMethod
  status          PaymentStatus @default(PENDING)
  
  gateway         String?
  transactionId   String?       @unique
  paymentIntentId String?
  
  rentalCost      Decimal       @db.Decimal(10, 2)
  deposit         Decimal       @db.Decimal(10, 2)
  deliveryFee     Decimal       @db.Decimal(10, 2)
  tax             Decimal       @db.Decimal(10, 2)
  platformFee     Decimal       @db.Decimal(10, 2)
  
  refundAmount    Decimal       @default(0) @db.Decimal(10, 2)
  refundReason    String?
  refundedAt      DateTime?
  
  processedAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  rental   Rental    @relation(fields: [rentalId], references: [id], onDelete: Cascade)

  @@index([rentalId])
  @@index([customerId])
  @@index([transactionId])
  @@index([status])
}

model PaymentMethodModel {
  id            String   @id @default(cuid())
  customerId    String
  type          String
  provider      String
  isDefault     Boolean  @default(false)
  
  cardBrand     String?
  cardLast4     String?
  cardExpMonth  Int?
  cardExpYear   Int?
  
  bankName      String?
  bankLast4     String?
  bankType      String?
  
  token         String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model Payout {
  id            String   @id @default(cuid())
  vendorId      String
  amount        Decimal  @db.Decimal(10, 2)
  currency      String   @default("INR")
  status        String   @default("PENDING")
  method        String
  
  transactionId String?  @unique
  reference     String?
  
  grossAmount   Decimal  @db.Decimal(10, 2)
  commission    Decimal  @db.Decimal(10, 2)
  netAmount     Decimal  @db.Decimal(10, 2)
  
  processedAt   DateTime?
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  vendor Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([vendorId])
  @@index([status])
}

// ============================================
// REVIEWS & RATINGS
// ============================================

model Review {
  id          String       @id @default(cuid())
  productId   String
  customerId  String
  userId      String
  orderItemId String?
  
  rating      Int
  title       String?
  content     String?      @db.Text
  images      Json?
  status      ReviewStatus @default(PENDING)
  
  vendorResponse String?   @db.Text
  respondedAt    DateTime?
  
  isVerified   Boolean     @default(false)
  isHelpful    Int         @default(0)
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id])
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([customerId])
  @@index([userId])
  @@index([status])
}

// ============================================
// DISPUTES & ISSUES
// ============================================

model Dispute {
  id          String   @id @default(cuid())
  rentalId    String
  type        String
  status      String   @default("OPEN")
  
  title       String
  description String   @db.Text
  images      Json?
  
  resolution  String?  @db.Text
  refundAmount Decimal? @db.Decimal(10, 2)
  resolvedAt  DateTime?
  resolvedBy  String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rental Rental @relation(fields: [rentalId], references: [id], onDelete: Cascade)

  @@index([rentalId])
  @@index([status])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String   @db.Text
  data      Json?
  isRead    Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

// ============================================
// CMS / CONTENT
// ============================================

model Banner {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  image     String   @db.Text
  link      String?
  position  String   @default("home")
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
}

// ============================================
// BRANDS
// ============================================

model Brand {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?   @db.Text
  description String?  @db.Text
  website     String?
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products    Product[]

  @@index([slug])
  @@index([isFeatured])
}

model Page {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.LongText
  metaTitle   String?
  metaDescription String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String  @db.Text

  @@index([key])
}
